#eve {VARIABLE UPDATED qi} {
    #local percent 100;
    #math percent {$qi_efft*100/$qi_max};
    #if {$percent < 80 && $inBattle == 1} {
        #send {eat yao};
    } {};

    #math percent {$qi*100/$qi_efft};
    #if {$percent < 70 && $inBattle == 1} {
        #send {yun recover};

        #if {$percent <15 && $inBattle == 1} {
            halt;
            $list_exit[1];
        };
