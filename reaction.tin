#act {{^\s.{10}\s([^(]+)\([\w\s]+\)}} {
    #regexp {%2} {{\S*$target_name$}} {

        #nop block the next trigger for level;

        #line oneshot #act {{^\s.*的(武功|境界)(看上去|完全看)(\S+?)(，出手|。)}} {
            #nop #echo {%s--%s} {%%4} {@desc2lvl{%%4}};
