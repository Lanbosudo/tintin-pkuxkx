#nop #act {{^\s{4}([^0-9a-zA-Z;:() ]+\s)*(\S*「\S+」)?((一|二|三|四|五|六|七|八|九|十)+位)?([^;:()]+)\(([^()]+)\)( <\S+>)?$}};
#act {{^\s{4}(\S.+)\(([^()]+)\)( (<|\[)\S+(>|\]))?$}} {
    #nop #echo {reaction,match id: %3};
    #regexp {%2} {{\S*$job_name$}} {
        #format id %l {%3};
        follow $id;
        #line quiet #unvar id;
    };
    #regexp {%2} {{\S*$target_name$}} {
        #format target_id %l {%3};
        #delay target_look {look $target_id} 1;
    };
};

